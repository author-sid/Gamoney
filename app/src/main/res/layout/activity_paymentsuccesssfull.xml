<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/backgroundgamoney"
    tools:context=".Paymentsuccesssfull">


    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginStart="150dp"
        android:layout_marginTop="150dp"
        android:layout_marginEnd="300dp"
        android:layout_marginBottom="300dp"
        android:src="@drawable/tick"
        android:contentDescription="@string/payment_successful"/>

    <TextView
        android:id="@+id/text1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="35dp"
        android:layout_marginTop="280dp"
        android:text="@string/thankyou_your_payment_is_successful_n_ntransaction_id"
        android:textColor="#FFFFFF"
        android:textSize="25sp"
        android:textStyle="italic" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="25sp"
        android:textColor="#fff"
        android:text="@string/referencenumber"
        android:layout_marginTop="370dp"
        android:layout_marginStart="210dp"
        android:id="@+id/referencenumber"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#fff"
        android:textSize="25sp"
        android:text="@string/hashtag"
        android:layout_marginTop="370dp"
        android:layout_marginStart="210dp"/>

    <Button
        android:id="@+id/Jointournament"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="101dp"
        android:layout_marginTop="450dp"
        android:layout_marginEnd="120dp"
        android:layout_marginBottom="120dp"
        android:background="@drawable/newbutton"
        android:text="@string/join_tournament"
        android:textColor="#FFF"
        android:textSize="18sp"
        android:textStyle="italic" />

    <TextView
        android:id="@+id/Backtohome2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="160dp"
        android:layout_marginTop="650dp"
        android:layout_marginEnd="140dp"
        android:clickable="true"
        android:focusable="true"
        android:text="@string/home1"
        android:textColor="#FFFFFF"
        android:textSize="25sp"
        android:textStyle="italic"/>

</RelativeLayout>





