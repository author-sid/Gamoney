<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Paymentsuccesssfull"
    android:background="@drawable/backgroundgamoney">


    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="300dp"
        android:layout_marginBottom="300dp"
        android:src="@drawable/tick"
        android:layout_marginTop="150dp"
        android:layout_marginStart="150dp"
        android:layout_alignParentTop="true">


    </ImageView>


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="35dp"
        android:layout_marginTop="280dp"
        android:text="@string/thankyou_your_payment_is_successful_n_ntransaction_id"
        android:textColor="#FFFFFF"
        android:textSize="25sp"
        android:textStyle="italic"
        android:id="@+id/text1">


    </TextView>

    <Button
        android:id="@+id/Jointournament"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="101dp"
        android:layout_marginTop="450dp"
        android:layout_marginEnd="120dp"
        android:layout_marginBottom="120dp"
        android:text="@string/join_tournament"
        android:textSize="18sp"
        android:textStyle="italic"
        android:textColor="#FFF"
        android:background="@drawable/newbutton"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:text="@string/home1"
        android:layout_marginStart="160dp"
        android:layout_marginTop="650dp"
        android:layout_marginEnd="140dp"
        android:textSize="25sp"
        android:textStyle="italic"
        android:textColor="#FFFFFF"
        android:id="@+id/Backtohome2"
        android:focusable="true">


</TextView>





</RelativeLayout>





