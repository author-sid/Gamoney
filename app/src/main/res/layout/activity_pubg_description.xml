<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".PubgDescription">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAllCaps="true"
            android:text="@string/tournaments"
            android:textStyle="bold"
            android:fontFamily="@font/bungee"
            android:textColor="#000"
            android:textSize="25sp"
            android:layout_marginStart="100dp"
            android:id="@+id/tournamenttext"
            android:layout_marginBottom="30dp"/>

        <ImageView
            android:layout_below="@id/tournamenttext"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:src="@mipmap/ic_launcher"
            android:id="@+id/image_recycler"
            android:scaleType="centerCrop"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/image_recycler"
            android:textSize="18sp"
            android:text="@string/TestText"
            android:fontFamily="@font/antic"
            android:layout_marginTop="20dp"
            android:textColor="#000"
            android:layout_marginStart="18dp"
            android:id="@+id/image_description"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:fontFamily="@font/bungee"
            android:layout_below="@id/image_description"
            android:layout_marginStart="18dp"
            android:textColor="#000"
            android:text="@string/Generalrules"
            android:id="@+id/generalrule"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:layout_below="@+id/generalrule"
            android:layout_marginStart="18dp"
            android:fontFamily="@font/antic"
            android:textColor="#000"
            android:text="@string/Rules"
            android:id="@+id/rules"/>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="18dp"
            android:src="@drawable/instagram"
            android:layout_below="@id/rules"
            android:layout_marginTop="-35dp"
            android:layout_marginStart="160dp"
            android:id="@+id/instagram1"
            android:clickable="true"
            android:focusable="true"/>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="18dp"
            android:src="@drawable/facebook"
            android:layout_below="@id/rules"
            android:layout_marginTop="-35dp"
            android:layout_marginStart="190dp"
            android:id="@+id/facebook1"
            android:clickable="true"
            android:focusable="true" />

        <Button
            app:cornerRadius="400dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/facebook1"
            android:text="@string/join_tournament"
            android:background="#000"
            android:textColor="#fff"
            android:textSize="13sp"
            android:layout_marginTop="30dp"
            android:layout_marginStart="135dp"
            android:fontFamily="@font/bungee"
            android:id="@+id/jointournament"/>

    </RelativeLayout>



</ScrollView>