<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    app:cardCornerRadius="10dp"
    app:cardUseCompatPadding="true">


    <RelativeLayout
        android:layout_width="411dp"
        android:layout_height="164dp"
        android:background="@drawable/bg1">

        <ImageView
            android:id="@+id/paidTournament_image"
            android:layout_width="140dp"
            android:layout_height="160dp"
            android:layout_marginStart="262dp"
            android:src="@mipmap/ic_launcher"
            android:contentDescription="@string/tournament_poster"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Joined"
            android:textColor="#000"
            android:textStyle="bold"
            android:textSize="30sp"
            android:layout_marginTop="120dp"
            android:layout_marginStart="80dp" />

        <TextView
            android:id="@+id/paiddate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="29dp"
            android:layout_marginEnd="179dp"
            android:layout_marginBottom="97dp"
            android:text="@string/_05"
            android:textColor="#fff"
            android:textSize="50sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/paidmonth"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="95dp"
            android:layout_marginTop="11dp"
            android:layout_marginEnd="68dp"
            android:layout_marginBottom="1dp"
            android:text="@string/september"
            android:textColor="#fff"
            android:textSize="18sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/paidtime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/time1"
            android:textColor="#B9BCB4"
            android:layout_marginStart="95dp"
            android:layout_marginTop="35dp"
            android:textSize="18sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/paidtournamentname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="29dp"
            android:layout_marginTop="65dp"
            android:layout_marginEnd="116dp"
            android:text="@string/tournament1"
            android:textAllCaps="true"
            android:textColor="#F14404"
            android:textSize="18sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/paidmap"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="29dp"
            android:layout_marginTop="86dp"
            android:layout_marginEnd="179dp"
            android:text="@string/map"
            android:textColor="#B9BCB4"
            android:textSize="15sp" />


    </RelativeLayout>


</androidx.cardview.widget.CardView>